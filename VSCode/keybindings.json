// Place your key bindings in this file to overwrite the defaults
[
  { "key": "ctrl+shift+i",          "command": "workbench.action.terminal.new" },
  { "key": "ctrl+i",                "command": "workbench.action.terminal.toggleTerminal" },
  { "key": "ctrl+cmd+i",            "command": "workbench.action.terminal.focus",
                                       "when": "!terminalFocus" },
  { "key": "ctrl+cmd+i",            "command": "workbench.action.terminal.focusNext",
                                       "when": "terminalFocus"},
  { "key": "cmd+f",                 "command": "workbench.action.terminal.findNext",
                                       "when": "terminalFindWidgetFocused" },
  { "key": "cmd+f",                 "command": "workbench.action.terminal.findNextTerminalFocus",
                                       "when": "terminalFocus" },
  { "key": "shift+cmd+o",           "command": "workbench.action.quickOpen" },
  { "key": "cmd+p",                 "command": "workbench.action.showCommands" },
]