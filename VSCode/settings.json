{
  // Editor behavior
  "editor.tabSize": 2,
  "editor.wordSeparators": "`~!#%^&*()-=+{}\\|;:'\",.<>/?",
  "editor.emptySelectionClipboard": false,
  "editor.suggestSelection": "first",
  "extensions.ignoreRecommendations": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.autoReveal": false,
  "problems.autoReveal": false,
  "scm.autoReveal": false,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "window.newWindowDimensions": "inherit",
  "workbench.list.horizontalScrolling": true,
  "workbench.startupEditor": "newUntitledFile",

  // Editor view
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.fontFamily": "'FiraCode Nerd Font', 'Fira Code', Menlo, Consolas, monospace",
  "editor.fontSize": 12,
  "editor.fontLigatures": true,
  "editor.bracketPairColorization.enabled": true,
  "debug.console.fontSize": 12,
  "workbench.colorTheme": "Default Light+",

  // Terminal behavior
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.developer.editorServicesLogLevel": "Verbose",
  "powershell.promptToUpdatePowerShell": false,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "path": [
        "pwsh.exe",
        "C:\\Program Files\\PowerShell\\7\\pwsh.exe"
      ],
      "args": [],
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    }
  },
  "terminal.integrated.windowsEnableConpty": true,
  "terminal.integrated.env.windows": {
    "LC_ALL": "C.UTF-8",
    "USE_OH_MY_POSH": "" // empty string = falsey. don't use oh-my-posh, it's having issues rendering in VSCode on Windows
  },
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "/usr/local/bin/bash",
      "args": [
        "-l"
      ],
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh",
      "args": [
        "-l"
      ]
    },
    "fish": {
      "path": "/usr/local/bin/fish",
      "args": [
        "-l"
      ]
    },
    "pwsh": {
      "path": "/usr/local/bin/pwsh",
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.defaultProfile.osx": "bash",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.external.windowsExec": "pwsh.exe",

  // Terminal view
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font', 'Fira Code', Menlo, Consolas, monospace",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.allowChords": false,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.detectLocale": "on",

  // Other
  "security.workspace.trust.untrustedFiles": "open",
  "javascript.updateImportsOnFileMove.enabled": "always",

  // Kubernetes
  "vs-kubernetes": {
    "vs-kubernetes.helm-path.mac": "/Users/jrosenberg/.vs-kubernetes/tools/helm/darwin-amd64/helm",
    "vs-kubernetes.kubectl-path.mac": "/Users/jrosenberg/.vs-kubernetes/tools/kubectl/kubectl",
    "vs-kubernetes.minikube-path.mac": "/Users/jrosenberg/.vs-kubernetes/tools/minikube/darwin-amd64/minikube",
    "vs-kubernetes.draft-path.mac": "/Users/jrosenberg/.vs-kubernetes/tools/draft/darwin-amd64/draft"
  },

  // Java
  "java.errors.incompleteClasspath.severity": "ignore",
  "java.configuration.checkProjectSettingsExclusions": false,
  "maven.executable.path": "/Users/jrosenberg/.jenv/shims/mvn",

  // Go
  "go.toolsManagement.autoUpdate": true,
  "gopls": { // https://github.com/golang/tools/blob/master/gopls/doc/settings.md#experimentalworkspacemodule-bool
    "experimentalWorkspaceModule": true,
    "directoryFilters": ["-node_modules"]
  }
}