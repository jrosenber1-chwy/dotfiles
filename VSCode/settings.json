{
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.startupEditor": "newUntitledFile",

  // Editor behavior
  "editor.tabSize": 2,
  "editor.wordSeparators": "`~!#%^&*()-=+{}\\|;:'\",.<>/?",

  // Terminal behavior
  "terminal.integrated.rightClickCopyPaste": true,

  // Editor view settings
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "workbench.panel.location": "bottom",
  "window.newWindowDimensions": "inherit",
  "editor.fontFamily": "'FuraCode Nerd Font', 'FiraCode NF', 'FiraCode Nerd Font', 'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "java.configuration.checkProjectSettingsExclusions": false,
  "workbench.list.horizontalScrolling": true,
  "editor.emptySelectionClipboard": false,
  "editor.bracketPairColorization.enabled": true,

  // Terminal
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.developer.editorServicesLogLevel": "Verbose",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "path": [
        "pwsh.exe",
        "C:\\Program Files\\PowerShell\\7\\pwsh.exe"
      ],
      "args": [],
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    }
  },
  "terminal.integrated.windowsEnableConpty": true,
  "terminal.integrated.env.windows": {
    "LC_ALL": "C.UTF-8",
    "USE_OH_MY_POSH": "" // empty string = falsey. don't use oh-my-posh, it's having issues rendering in VSCode on Windows
  },
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "bash",
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh",
      "args": [
        "-l"
      ]
    },
    "fish": {
      "path": "fish",
      "args": [
        "-l"
      ]
    },
    "pwsh": {
      "path": "pwsh",
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.defaultProfile.osx": "pwsh",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "extensions.ignoreRecommendations": true,
  "java.errors.incompleteClasspath.severity": "ignore",
  "terminal.integrated.fontFamily": "'Fira Mono for Powerline', 'FuraCode Nerd Font', 'FiraCode NF', 'FiraCode Nerd Font', 'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "powershell.promptToUpdatePowerShell": false,
  "terminal.external.osxExec": "iTerm.app",
  "terminal.external.windowsExec": "pwsh.exe",
  "terminal.integrated.cursorStyle": "line",
  "maven.executable.path": "/Users/jrosenberg/.jenv/shims/mvn",
  "vs-kubernetes": {
    "vs-kubernetes.helm-path.mac": "/Users/jrosenberg/.vs-kubernetes/tools/helm/darwin-amd64/helm",
    "vs-kubernetes.kubectl-path.mac": "/Users/jrosenberg/.vs-kubernetes/tools/kubectl/kubectl",
    "vs-kubernetes.minikube-path.mac": "/Users/jrosenberg/.vs-kubernetes/tools/minikube/darwin-amd64/minikube",
    "vs-kubernetes.draft-path.mac": "/Users/jrosenberg/.vs-kubernetes/tools/draft/darwin-amd64/draft"
  },
  "scm.autoReveal": false,
  "explorer.autoReveal": false,
  "problems.autoReveal": false,
  "mssql.connections": [
    {
      "server": "{{put-server-name-here}}",
      "database": "{{put-database-name-here}}",
      "user": "{{put-username-here}}",
      "password": "{{put-password-here}}"
    }
  ],
  "workbench.colorTheme": "Default Light+",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.fontLigatures": true,
  "terminal.integrated.allowChords": false,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.detectLocale": "on",
  "editor.fontSize": 12,
  "debug.console.fontSize": 12,
  "terminal.integrated.fontSize": 12
}