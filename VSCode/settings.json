{
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.startupEditor": "newUntitledFile",

  // Editor behavior
  "editor.tabSize": 2,
  "editor.wordSeparators": "`~!#%^&*()-=+{}\\|;:'\",.<>/?",

  // Terminal behavior
  "terminal.integrated.rightClickCopyPaste": true,

  // Editor view settings
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "workbench.panel.location": "bottom",
  "window.zoomLevel": 0,
  "window.newWindowDimensions": "inherit",
  "editor.fontFamily": "'FuraCode Nerd Font', 'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "java.configuration.checkProjectSettingsExclusions": false,
  "workbench.list.horizontalScrolling": true,
  "editor.emptySelectionClipboard": false,

  // Terminal
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.developer.editorServicesLogLevel": "Verbose",
  "terminal.integrated.shell.windows": "pwsh.exe",
  "terminal.integrated.shell.osx": "/usr/local/bin/bash",
  "terminal.integrated.shellArgs.osx": [],
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "extensions.ignoreRecommendations": true,
  "java.errors.incompleteClasspath.severity": "ignore",
  "terminal.integrated.rendererType": "dom",
  "powershell.promptToUpdatePowerShell": false,
  "terminal.external.osxExec": "iTerm.app",
  "terminal.external.windowsExec": "pwsh.exe",
  "terminal.integrated.cursorStyle": "line",
  "maven.executable.path": "/Users/jrosenberg/.jenv/shims/mvn",
  "vs-kubernetes": {
    "vs-kubernetes.helm-path.mac": "/Users/jrosenberg/.vs-kubernetes/tools/helm/darwin-amd64/helm",
    "vs-kubernetes.kubectl-path.mac": "/Users/jrosenberg/.vs-kubernetes/tools/kubectl/kubectl",
    "vs-kubernetes.minikube-path.mac": "/Users/jrosenberg/.vs-kubernetes/tools/minikube/darwin-amd64/minikube",
    "vs-kubernetes.draft-path.mac": "/Users/jrosenberg/.vs-kubernetes/tools/draft/darwin-amd64/draft"
  },
  "scm.autoReveal": false,
  "explorer.autoReveal": false,
  "problems.autoReveal": false,
  "mssql.connections": [
    {
      "server": "{{put-server-name-here}}",
      "database": "{{put-database-name-here}}",
      "user": "{{put-username-here}}",
      "password": "{{put-password-here}}"
    }
  ],
  "workbench.colorTheme": "Default Light+"
}